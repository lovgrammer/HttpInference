<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
      <TextView
	  android:id="@+id/txt_result"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textSize="16dip"
	  android:text="Original Photo"
	  android:padding="8dip"/>      
      <TextView
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textSize="16dip"
	  android:text="Original Photo"
	  android:padding="8dip"/>
      <ImageView
	  android:id="@+id/img_original"
	  android:layout_width="match_parent"
	  android:layout_height="300dip"
	  android:scaleType="centerInside"/>
      <TextView
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textSize="16dip"
	  android:text="Local Result"
	  android:padding="8dip"/>
      <ImageView
	  android:id="@+id/img_local"
	  android:layout_width="match_parent"
	  android:layout_height="300dip"
	  android:scaleType="centerInside"/>
      <TextView
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textSize="16dip"
	  android:text="Remote1 Result"
	  android:padding="8dip"/>
      <ImageView
	  android:id="@+id/img_remote1"
	  android:layout_width="match_parent"
	  android:layout_height="300dip"
	  android:scaleType="centerInside"/>
      <TextView
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textSize="16dip"
	  android:text="Remote2 Result"
	  android:padding="8dip"/>
      <ImageView
	  android:id="@+id/img_remote2"
	  android:layout_width="match_parent"
	  android:layout_height="300dip"
	  android:scaleType="centerInside"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
